                ],
                "summary": "Create a new post",
                "description": "Create a new post",
                "operationId": "e0621a005075944f46554c932c9df008",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
